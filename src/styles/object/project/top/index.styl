@import 'loading'

.p-top
  color #2c4a70
  *
    box-sizing border-box
  &__header
    &__title
      font-weight bold
      position relative
      +pc()
        display flex
        justify-content center
        font-size pcvw(78)
        padding-bottom pcvw(80)
      +sp()
        display flex
        justify-content center
        font-size spvw(64)
        padding-bottom spvw(50)
      &:after
        content ""
        display block
        position absolute
        bottom 0
        left auto
        right auto
        background-color #fad06c
        +pc()
          width pcvw(120)
          height pcvw(10)
        +sp()
          width spvw(120)
          height spvw(10)
    &__text
      +pc()
        font-size pcvw(28)
        margin-top pcvw(60)
        text-align center
        line-height 1.8
      +sp()
        font-size spvw(28)
        text-align center
        line-height 1.8
        padding 0 spvw(50)
        margin spvw(60) auto 0


  &__about
    +pc()
      margin-top pcvw(300)
    +sp()
      margin-top spvw(250)
    &__contents
      +pc()
        display flex
        width pcvw(2200)
        margin 0 auto
      +sp()
        padding 0 spvw(50)
        margin 0 auto
    &__item
      &--title
        +pc()
          width 47%
          padding-left pcvw(300)
      &--desc
        +pc()
          width 53%
        +sp()
          margin-top spvw(75)

    &__title
      font-weight bold
      +pc()
        font-size pcvw(88)
        line-height 1.6
      +sp()
        font-size spvw(72)
        line-height 1.4
    &__link
      +pc()
        margin-top pcvw(100)
      +sp()
        margin-top spvw(100)
        text-align center

    &__desc
      font-weight bold
      +pc()
        font-size pcvw(38)
        line-height 2.35
      +sp()
        font-size spvw(32)
        line-height 2.375

    &__img
      text-align center
      +pc()
        margin pcvw(140) auto 0
        width pcvw(2200)
      +sp()
        padding 0 spvw(50)
        margin spvw(90) auto 0


  &__course
    +pc()
      width pcvw(2200)
      margin pcvw(300) auto 0
    +sp()
      margin-top spvw(100)
    &__introduction
      +pc()
        margin-top pcvw(100)
      &__list
        +pc()
          display flex
          flex-wrap wrap
          border solid pcvw(10) #d5e2ea
        +sp()
          margin-top spvw(100)
          border solid spvw(10) #d5e2ea
        &__item
          position relative
          +pc()
            width calc(100% / 3)
            padding pcvw(200) pcvw(70) pcvw(100)
            border-right solid pcvw(10) #d5e2ea
            margin-top -2px // vwでずれるborderの調整
          +sp()
            padding spvw(45) spvw(45) spvw(80)
            border-top solid spvw(10) #d5e2ea
            border-left solid spvw(10) #d5e2ea
            border-right solid spvw(10) #d5e2ea
            display flex
            flex-wrap wrap
            width 100%
          &:nth-child(1)
            +pc()
              width 50%
              padding-left pcvw(270)
              padding-right pcvw(140)
              padding-top pcvw(100)
              border-bottom solid pcvw(10) #d5e2ea
            .p-top__course__introduction__list__image
              +pc()
                margin-left pcvw(100)
                width pcvw(492)
          &:nth-child(2)
            +pc()
              width 50%
              padding-left pcvw(270)
              padding-right pcvw(140)
              padding-top pcvw(100)
              border-bottom solid pcvw(10) #d5e2ea
              border-right none
            .p-top__course__introduction__list__image
              +pc()
                margin-left pcvw(100)
                width pcvw(472)
          &:nth-child(3)
            .p-top__course__introduction__list__image
              +pc()
                width pcvw(439)
                margin-left auto
          &:nth-child(4)
            .p-top__course__introduction__list__image
              +pc()
                width pcvw(400)
                margin-left pcvw(130)
          &:nth-child(5)
            +pc()
              border-right none
            +sp()
              border-bottom solid spvw(10) #d5e2ea
            .p-top__course__introduction__list__image
              +pc()
                width pcvw(441)
                margin-left auto
        &__title
          +pc()
            position absolute
            font-weight bold
            font-size pcvw(56)
            -ms-writing-mode tb-rl
            writing-mode vertical-rl
            top pcvw(80)
            left pcvw(70)
          +sp()
            font-weight bold
            font-size spvw(56)
            width 100%
            text-align center
            order 2
        &__image
          +pc()
            height pcvw(327)
            text-align center
          +sp()
            display flex
            align-items center
            justify-content center
            width 100%
            height spvw(395)
            order 1
            .is-001 & img
              width spvw(342)
            .is-002 & img
              width spvw(326)
            .is-003 & img
              width spvw(333)
            .is-004 & img
              width spvw(334)
            .is-005 & img
              width spvw(341)
        &__text
          +pc()
            font-size pcvw(28)
            line-height 1.7
            margin-top pcvw(70)
          +sp()
            font-size spvw(28)
            line-height 1.7
            margin-top spvw(54)
            order 3
        &__anchor
          +pc()
            display inline-block
            font-size pcvw(28)
            color #2c4a70
            font-weight bold
            letter-spacing 0.04em
            margin-top pcvw(32)
            hover_opacity()
          +sp()
            display inline-block
            font-size spvw(28)
            color #2c4a70
            font-weight bold
            letter-spacing 0.04em
            margin spvw(45) auto 0
            order 4
          &__arrow
            +pc()
              position relative
              width pcvw(34)
              height pcvw(34)
              display inline-block
              vertical-align middle
              margin-right pcvw(18)
              background-image url('/assets/images/common/ico-arrow-navy.svg')
              background-repeat no-repeat
              background-position center
              background-size pcvw(32)
              transform translateY(-0.1vw)
            +sp()
              position relative
              width spvw(36)
              height spvw(36)
              display inline-block
              vertical-align middle
              margin-right spvw(20)
              background-image url('/assets/images/common/ico-arrow-navy.svg')
              background-repeat no-repeat
              background-position center
              background-size spvw(34)
              transform translateY(-0.25vw)

    &__link
      text-align center
      +pc()
        margin-top pcvw(125)
      +sp()
        margin-top spvw(80)

  &__news
    position relative
    +pc()
      width pcvw(2200)
      margin pcvw(300) auto 0
    +sp()
      margin-top spvw(370)
    &.is-show
      .p-top__news__footprints--top span, .p-top__news__footprints--bottom span
        opacity 1
    &__footprints
      &--top, &--bottom
        span
          position absolute
          z-index -1
          background-size cover
          background-position left top
          background-repeat no-repeat
          opacity 0
          transition opacity .2s ease-out
          +pc()
            background-image url('/assets/images/top/pc/footprints.png')
            width pcvw(102)
            height pcvw(51)
          +sp()
            background-image url('/assets/images/top/sp/footprints.png')
            width spvw(83)
            height spvw(37)
      &--top
        span
          &:nth-child(1)
            transition-delay .5s
            +pc()
              top pcvw(-540)
              right pcvw(-240)
              transform rotate(110deg) scale(-1, 1)
            +sp()
              top spvw(-320)
              right spvw(10)
              transform rotate(110deg) scale(-1, 1)
          &:nth-child(2)
            transition-delay .8s
            +pc()
              top pcvw(-450)
              right pcvw(-90)
              transform rotate(-20deg)
            +sp()
              top spvw(-250)
              right spvw(120)
              transform rotate(-20deg)
          &:nth-child(3)
            transition-delay 1.1s
            +pc()
              top pcvw(-330)
              right pcvw(-75)
              transform rotate(130deg) scale(-1, 1)
            +sp()
              top spvw(-130)
              right spvw(145)
              transform rotate(130deg) scale(-1, 1)
          &:nth-child(4)
            transition-delay 1.4s
            +pc()
              top pcvw(-330)
              right pcvw(70)
              transform rotate(-30deg)
            +sp()
              top spvw(-130)
              right spvw(270)
              transform rotate(-30deg)
          &:nth-child(5)
            transition-delay 1.7s
            +pc()
              top pcvw(-164)
              right pcvw(150)
              transform rotate(150deg) scale(-1, 1)
            +sp()
              top spvw(-30)
              right spvw(320)
              transform rotate(150deg) scale(-1, 1)
          &:nth-child(6)
            transition-delay 2s
            +pc()
              top pcvw(-190)
              right pcvw(310)
              transform rotate(10deg)
            +sp()
              top spvw(-50)
              right spvw(460)
              transform rotate(0deg)
          &:nth-child(7)
            transition-delay 2.3s
            +pc()
              top pcvw(-60)
              right pcvw(390)
              transform rotate(140deg) scale(-1, 1)
            +sp()
              top spvw(70)
              right spvw(510)
              transform rotate(140deg) scale(-1, 1)
          &:nth-child(8)
            transition-delay 2.6s
            +pc()
              top pcvw(-100)
              right pcvw(560)
              transform rotate(0deg)
            +sp()
              top spvw(30)
              right spvw(650)
              transform rotate(0deg)

      &--bottom
        span
          &:nth-child(1)
            +pc()
              bottom pcvw(150)
              left pcvw(-80)
              transform rotate(260deg)
              transition-delay 6s
            +sp()
              bottom spvw(140)
              left spvw(-10)
              transform rotate(260deg)
              transition-delay 6s
          &:nth-child(2)
            +pc()
              bottom pcvw(90)
              left pcvw(70)
              transform rotate(40deg) scale(-1, 1)
              transition-delay 6.3s
            +sp()
              bottom spvw(70)
              left spvw(110)
              transform rotate(40deg) scale(-1, 1)
              transition-delay 6.3s
          &:nth-child(3)
            +pc()
              bottom pcvw(-50)
              left pcvw(50)
              transform rotate(230deg)
              transition-delay 6.6s
            +sp()
              bottom spvw(-70)
              left spvw(130)
              transform rotate(230deg)
              transition-delay 6.6s
          &:nth-child(4)
            +pc()
              bottom pcvw(-40)
              left pcvw(260)
              transform rotate(20deg) scale(-1, 1)
              transition-delay 6.9s
            +sp()
              bottom spvw(-40)
              left spvw(250)
              transform rotate(20deg) scale(-1, 1)
              transition-delay 6.9s
          &:nth-child(5)
            +pc()
              bottom pcvw(-164)
              left pcvw(320)
              transform rotate(210deg)
              transition-delay 7.2s
            +sp()
              bottom spvw(-150)
              left spvw(300)
              transform rotate(210deg)
              transition-delay 7.2s
          &:nth-child(6)
            +pc()
              bottom pcvw(-140)
              left pcvw(470)
              transform rotate(0deg) scale(-1, 1)
              transition-delay 7.5s
            +sp()
              bottom spvw(-140)
              left spvw(440)
              transform rotate(0deg) scale(-1, 1)
              transition-delay 7.5s
          &:nth-child(7)
            +pc()
              bottom pcvw(-270)
              left pcvw(570)
              transform rotate(210deg)
              transition-delay 7.8s
            +sp()
              bottom spvw(-240)
              left spvw(500)
              transform rotate(210deg)
              transition-delay 7.8s
          &:nth-child(8)
            +pc()
              bottom pcvw(-240)
              left pcvw(770)
              transform rotate(0deg) scale(-1, 1)
              transition-delay 8.1s
            +sp()
              bottom spvw(-210)
              left spvw(645)
              transform rotate(0deg) scale(-1, 1)
              transition-delay 8.1s
          &:nth-child(9)
            +pc()
              bottom pcvw(-380)
              left pcvw(800)
              transform rotate(220deg)
              transition-delay 8.4s
            +sp()
              display none
              // bottom spvw(-380)
              // left spvw(800)
              // transform rotate(220deg)
              // transition-delay 8.4s
          &:nth-child(10)
            +pc()
              bottom pcvw(-370)
              left pcvw(950)
              transform rotate(-10deg) scale(-1, 1)
              transition-delay 8.7s
            +sp()
              display none
              // bottom spvw(-370)
              // left spvw(950)
              // transform rotate(-10deg) scale(-1, 1)
              // transition-delay 8.7s

    .c-article__list__item + .c-article__list__item
      +sp()
        margin-top 0
        margin-left spvw(30)

    .c-article__list
      +sp()
        overflow-x scroll
        white-space nowrap
        margin-right 0
        margin-left 0
        padding 0 spvw(50)

      &__item
        +sp()
          width spvw(560)
          display inline-block
        // & + &
        //   +sp()
        //     margin-top 0
        //     margin-left spvw(30)
        a
          +pc()

    // .c-article__list__item + .c-article__list__item
    // .c-article__list__desc
    //   +sp()
    //     padding spvw(35) spvw(30)


    &__link
      font-weight bold
      +pc()
          text-align center
          margin-top pcvw(80)
          font-size pcvw(32)
      +sp()
        display flex
        justify-content center
        margin-top spvw(100)
        font-size spvw(32)
      a
        display inline-block
        position relative
        color #2c4a70
        +pc()
          padding-left 27px
        +sp()
          padding-left spvw(60)
        &:hover
          .p-topics__article__back__arrow
            &::before
              transform translate(-60%, -50%)
            &::after
              transform translate(-70%, -50%) rotate(-135deg)


      &__arrow
        background-color #0053a9
        display block
        position absolute
        top 50%
        transform translateY(-50%)
        +pc()
          width 20px
          height 20px
          border-radius 10px
          left -10px
        +sp()
          width spvw(40)
          height spvw(40)
          border-radius spvw(40)
          left 0
        &::before
          content ""
          display block
          position absolute
          left 50%
          top 50%
          width 10px
          height 2px
          background #fff
          transform translate(-50%, -50%)
          transition all .5s ease
        &::after
          content ""
          display block
          position absolute
          left 55%
          top 50%
          width 5px
          height 5px
          border-top 2px solid #fff
          border-right 2px solid #fff
          transform translate(-50%, -50%) rotate(45deg)
          transition all .5s ease


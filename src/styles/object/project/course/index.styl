table
  border-collapse collapse
  border-spacing 0
  margin 0
  padding 0
  border 0


.p-course
  color #2c4a70
  +pc()
    padding-top pcvw(368)
  +sp()
    padding-top spvw(210)
    overflow hidden
  *
    box-sizing border-box


  &__menu
    +pc()
      margin-top pcvw(260)
    +sp()
      margin-top spvw(115)
    &__title
      font-weight bold
      +pc()
        font-size pcvw(72)
        padding-bottom pcvw(40)
        border-bottom 1px solid #2c4a70
      +sp()
        font-size spvw(56)
        padding-bottom spvw(25)
        border-bottom 1px solid #2c4a70
    &__contents
      +pc()
        margin-top pcvw(100)
        display flex
        justify-content space-between
      +sp()
        margin-top spvw(55)
      .p-course__menu__contents__desc
        +pc()
          width pcvw(950)
      .p-course__menu__contents__table
        +pc()
          width pcvw(1100)
      &.is-wide
        .p-course__menu__contents__desc
          +pc()
            width pcvw(650)
        .p-course__menu__contents__table
          +pc()
            width pcvw(1400)
    &__item + &__item
      +pc()
        margin-top pcvw(60)
      +sp()
        margin-top spvw(55)

    &__label
      background-color #2c4a70
      color #ffffff
      display inline-block
      font-weight bold
      +pc()
        padding pcvw(15) 0
        border-radius pcvw(30)
        font-size pcvw(26)
        width pcvw(270)
        text-align center
      +sp()
        padding spvw(15) 0
        border-radius spvw(30)
        font-size spvw(26)
        width spvw(270)
        text-align center
    &__text
      line-height 1.6
      +pc()
        font-size pcvw(30)
        margin-top pcvw(30)
      +sp()
        font-size spvw(28)
        margin-top spvw(30)

    &__pricelist
      color #2c4a70
      +pc()
        width 100%
        margin-top pcvw(35)
      +sp()
        margin-top spvw(40)
      &__area
        +sp()
          overflow hidden
          height 0
          transition .2s margin ease-out
        &.is-show
          margin spvw(60) 0
          overflow initial
      &__wrap
        +sp()
          margin-top spvw(95)
      &__scroll
        +sp()
          overflow-x scroll
          margin-right spvw(-50)
      th
        border-right 1px solid #e9eef2
        vertical-align middle
        text-align center
        white-space nowrap
        +pc()
          height pcvw(120)
          padding 0 pcvw(20)
        +sp()
          height spvw(75)
          padding 0 spvw(15)
          min-width spvw(160)
      td
        border-right 1px solid #d5e2ea
        vertical-align middle
        text-align center
        white-space nowrap
        +pc()
          height pcvw(120)
          padding 0 pcvw(40)
        +sp()
          min-height spvw(80)
          padding spvw(15) spvw(15)
        &:last-child
          +pc()
            border-right none
      &__heading
        background-color #d5e2ea
        &__item
          +pc()
            font-size pcvw(28)
          +sp()
            font-size spvw(24)

      &__body
        &:nth-child(even)
          background-color #ffffff
        &:nth-child(odd)
          background-color #f2f6f9
        &__item
          +pc()
            font-size pcvw(28)
          +sp()
            font-size spvw(24)

    &__remarks
      width 100%
      color #2c4a70
      +pc()
        margin-top pcvw(25)
      +sp()
        margin-top spvw(20)
        width spvw(650)
      &__area
        +pc()
          margin-top pcvw(70)
        +sp()
          margin-top spvw(55)
      &__title
        font-weight bold
        +pc()
          font-size pcvw(32)
        +sp()
          font-size spvw(28)
      td
        vertical-align middle
        +pc()
          padding pcvw(20) 0
        &:nth-child(1)
          text-align center
          +pc()
            width pcvw(210)
          +sp()
            width spvw(150)
        &:nth-child(2)
          text-align left
          .p-course__menu__remarks__body__item
            border-left 1px solid #d5e2ea
            +pc()
              padding pcvw(10) pcvw(40)
            +sp()
              padding spvw(15) spvw(40)

      &__body
        &:nth-child(even)
          background-color #f2f6f9
        &:nth-child(odd)
          background-color #ffffff
        &__item
          +pc()
            font-size pcvw(28)
            padding pcvw(10) 0
          +sp()
            font-size spvw(24)
            padding spvw(10) 0
          dl
            display flex
            flex-wrap wrap
            +pc()
              width pcvw(400)
            +sp()
              width spvw(270)
          dt
            text-align right
            +pc()
              width pcvw(150)
              padding-right pcvw(30)
            +sp()
              width spvw(120)
              padding-right spvw(20)
          dd + dd
            +pc()
              padding-left pcvw(30)
            +sp()
              padding-left spvw(20)
      &__caption
        +pc()
          font-size pcvw(24)
        +sp()
          font-size spvw(22)
      &__em
        color #ff8880
        font-weight bold
      &.is-wide
        td
          &:nth-child(1)
            text-align center
            +pc()
              width pcvw(530)
            +sp()
              width spvw(240)
              padding 0 spvw(20)

    &__button
      background-color #0054a5
      display inline-block
      position relative
      font-weight bold
      cursor pointer
      color #fff
      transition all .2s ease-out
      +pc()
        font-size pcvw(28)
        padding pcvw(35) pcvw(220) pcvw(35) pcvw(70)
        border-radius pcvw(60)
      +sp()
        font-size spvw(26)
        padding spvw(35) spvw(65)
        width 100%
        border-radius spvw(60)
      &.is-show
        border-radius 0
        background-color #fff
        color #2c4a70
      &__link
        &::before,
        &::after
          display block
          content ""
          background #fad06c
          position absolute
          top 50%
          +pc()
            width pcvw(25)
            height pcvw(4)
            border-radius pcvw(4)
            right pcvw(40)
          +sp()
            width spvw(25)
            height spvw(4)
            border-radius spvw(4)
            right spvw(40)
        &::before
          transform translate(-50%, -50%)
        &::after
          transform translate(-50%, -50%) rotate(90deg)
          transition transform 0.2s ease-out
        &.is-show
          &::after
            transform translate(-50%, -50%) rotate(0deg)
            transition transform 0.2s ease-out

    &__timetable
      +pc()
        margin-top pcvw(70)
      +sp()
        margin-top spvw(40)
      &__area
        height 0
        overflow hidden
        transition .2s margin ease-out
        &.is-show
          +pc()
            margin-top pcvw(90)
          +sp()
            margin-top spvw(60)
            margin-right spvw(-50)
      &__list
        color #2c4a70
        +pc()
          width 100%
        +sp()
          min-width spvw(650)
        th
          border-right 1px solid #e9eef2
          vertical-align middle
          text-align center
          white-space nowrap
          +pc()
            height pcvw(120)
            min-width pcvw(270)
          +sp()
            height spvw(55)
            padding spvw(10) 0
            min-width spvw(70)
        td
          border-right 1px solid #d5e2ea
          vertical-align middle
          text-align center
          white-space nowrap
          +pc()
            height 3.3vw
            min-width pcvw(270)
          +sp()
            min-height spvw(80)
            padding spvw(15) spvw(15)
        &__heading
          background-color #d5e2ea
          &__item
            +pc()
              font-size pcvw(28)
            +sp()
              font-size spvw(24)
        &__body
          &:nth-child(even)
            background-color #ffffff
          &:nth-child(odd)
            background-color #f2f6f9
          &__item
            +pc()
              font-size pcvw(28)
            +sp()
              font-size spvw(24)
              &:first-of-type
                text-align left
            &.is-blank
              background-color #e9eef2


  &__supplement
    border-top solid 1px #d5e2ea
    +sp()
      margin-top spvw(150)
    &__holiday
      background-color #f6f2ee
      +pc()
        padding pcvw(80) pcvw(100)
        margin-top pcvw(150)
      +sp()
        margin-top spvw(60)
        padding spvw(70) spvw(50)
      &__item + &__item
        +pc()
          margin-top pcvw(60)
        +sp()
          margin-top spvw(70)
      &__title
        font-weight bold
        +pc()
          font-size pcvw(32)
        +sp()
          font-size spvw(36)
      &__desc
        line-height 1.6
        +pc()
          margin-top pcvw(25)
          font-size pcvw(28)
        +sp()
          font-size spvw(24)
          margin-top spvw(30)
        &__em
          font-weight bold
          color #ff8880
    &__remarks
      +sp()
        margin-top spvw(140)
      &__column
        +pc()
          display flex
          margin-top pcvw(180)
          justify-content space-between
        &__item
          +pc()
            width pcvw(1020)
        &__item + &__item
          +sp()
            margin-top spvw(60)
      &__single
        +pc()
          margin-top pcvw(70)
        +sp()
          margin-top spvw(60)




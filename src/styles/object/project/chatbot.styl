

.p-chatbot__startButton
  position: fixed
  z-index: 4;
  width: 60px
  height: 60px
  border-radius: 50%
  background-color: rgb(0,83,169)
  opacity 0
  transition: opacity 0.5s
  cursor pointer
  pointer-events: none
  &.is-show
    opacity 1
    pointer-events: auto
  +pc()
    right: 20px
    bottom: 20px
  +sp()
    right: 0
    left 0
    bottom: 10px
    margin-right 10px
    margin-left: auto

.p-chatbot__chat
  position: fixed
  bottom: 0
  z-index: 4;
  border-radius: 10px
  overflow: hidden
  transform: translateY(100%)
  transition: transform 0.5s
  pointer-events: none
  &.is-show
    transform: translateY(0)
    bottom: 20px
    pointer-events: auto
  +pc()
    right: 20px
    width: 400px
  +sp()
    right: 0
    left: 0
    width: 90%
    max-width: 600px
    margin: 0 auto
.p-chatbot__header
  height: 45px
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 20px
  color: #fff
  background-color: rgb(0,83,169);
.p-chatbot__title
  font-weight: bold
.p-chatbot__close
  font-size: 30px
  font-weight: bold
  cursor pointer
.p-chatbot__timeline
  height: 500px
  padding: 20px
  background-color: rgb(213,226,234);
  overflow-y: scroll
.p-chatbot__communication
  display: flex
  align-items: flex-end;
  &:not(:last-child) {
    margin-bottom: 20px
  }
  > *:first-child {
    margin-right 10px
  }
.p-chatbot__message
  position: relative
  flex: 1
  padding: 10px
  border-radius: 8px
  background-color: #fff
  &::after
    position: absolute
    bottom: 8px
    display: block
    border: 6px solid transparent
    content: ''
.p-chatbot__message--owner
  color: #333
  > p
    line-height: 1.5
  &::after
    left: -11px
    border-right-color: #fff
.p-chatbot__message--user
  &::after
    right: -11px
    border-left-color: #fff
.p-chatbot__message__link
  color:rgb(0,83,169)
  text-decoration: underline
.p-chatbot__question
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 10px
  padding: 10px
  border-radius: 8px
  font-weight: bold
  color: rgb(0,83,169)
  background-color: rgb(234,246,254)
  cursor pointer
.p-chatbot__question--selected 
  color: #fff
  background-color: rgb(96,181,225)
.p-chatbot__avatar
  width: 30px
  height: 30px
  overflow: hidden
  border-radius: 50%
.p-chatbot__avatar--owner
  background-color: rgb(0,83,169)
.p-chatbot__avatar--user
    background-color: rgb(10, 10, 10)
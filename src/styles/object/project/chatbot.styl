

.p-chatbot__startButton
  position: fixed
  z-index: 4
  border-radius: 50%
  opacity 0
  cursor pointer
  pointer-events: none
  background-color #0053a9
  background-image url('/assets/images/top/pc/ico-chat.svg')
  background-position center
  background-repeat no-repeat
  border 2px solid #0053a9
  &.is-show
    opacity 1
    pointer-events: auto
    cursor pointer
  +pc()
    width pcvw(120)
    height pcvw(120)
    right pcvw(40)
    bottom pcvw(40)
    background-size pcvw(74)
    transition all 0.2s ease-out
    &:hover
      background-color #fff
      background-image url('/assets/images/top/pc/ico-chat-on.svg')
      transition all 0.2s ease-out
      animation bound 1s ease-out
  +sp()
    width spvw(100)
    height spvw(100)
    right 0
    left 0
    bottom spvw(30)
    background-size spvw(60)
    margin-right spvw(30)
    margin-left auto

.p-chatbot__chat
  position: fixed
  bottom: 0
  z-index: 4;
  overflow: hidden
  transform: translateY(100%)
  transition: transform 0.5s
  pointer-events: none
  &.is-show
    transform: translateY(0)
    pointer-events: auto
    +pc()
      bottom: pcvw(40)
    +sp()
      bottom: spvw(30)
  +pc()
    border-radius: pcvw(20)
    right: pcvw(40)
    width: pcvw(800)
  +sp()
    border-radius: spvw(20)
    right: 0
    left: 0
    width: 90%
    max-width: 600px
    margin: 0 auto
.p-chatbot__header
  display: flex
  justify-content: space-between
  align-items: center
  color: #fff
  background-color: rgb(0,83,169);
  +pc()
    height: pcvw(100)
    padding: 0 pcvw(50)
  +sp()
    height: spvw(100)
    padding: 0 spvw(40)
.p-chatbot__title
  font-weight: bold
.p-chatbot__close
  font-weight: bold
  cursor pointer
  +pc()
    font-size: pcvw(60)
  +sp()
    font-size: spvw(40)
.p-chatbot__timeline
  background-color: rgb(213,226,234);
  overflow-y: scroll
  +pc()
    height: pcvw(1200)
    padding: pcvw(25) pcvw(30)
  +sp()
    height: spvw(1000)
    padding: spvw(40) spvw(20)
.p-chatbot__communication
  display: flex
  align-items: flex-end;
  &:not(:last-child)
    +pc()
      margin-bottom: pcvw(25)
    +sp()
      margin-bottom: spvw(25)
  > *:first-child {
    margin-right 10px
  }
.p-chatbot__message
  position: relative
  flex: 1
  padding: 10px
  border-radius: 8px
  background-color: #fff
  &::after
    position: absolute
    bottom: 8px
    display: block
    border: 6px solid transparent
    content: ''
.p-chatbot__message--owner
  color: #333
  > p
    line-height: 1.5
  &::after
    left: -11px
    border-right-color: #fff
.p-chatbot__message--user
  &::after
    right: -11px
    border-left-color: #fff
.p-chatbot__message__link
  color:rgb(0,83,169)
  text-decoration: underline
.p-chatbot__question
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 10px
  padding: 10px
  border-radius: 8px
  font-weight: bold
  color: rgb(0,83,169)
  background-color: rgb(234,246,254)
  cursor pointer
.p-chatbot__question--selected
  color: #fff
  background-color: rgb(96,181,225)
.p-chatbot__avatar
  overflow: hidden
  border-radius: 50%
  +pc()
    width: pcvw(90)
    height: pcvw(90)
  +sp()
    width: spvw(80)
    height: spvw(80)
.p-chatbot__avatar--owner
  background-image url('/assets/images/top/pc/owner.png')
  background-size cover
  background-position left top
  background-repeat no-repeat
.p-chatbot__message--user + .p-chatbot__avatar--owner
  background-image url('/assets/images/top/pc/user.png')

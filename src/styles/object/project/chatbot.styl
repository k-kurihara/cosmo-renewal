.p-chatbot
  position: fixed
  right: 20px
  bottom: 20px
  z-index: 3;
.p-chatbot__chat
  width: 400px
  border-radius: 10px
  overflow: hidden
.p-chatbot__header
  height: 45px
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 20px
  color: #fff
  background-color: rgb(0,83,169);
.p-chatbot__timeline
  height: 500px
  padding: 20px
  background-color: rgb(213,226,234);
  overflow-y: scroll
.p-chatbot__communication
  display: flex
  align-items: flex-end;
  &:not(:last-child) {
    margin-bottom: 20px
  }
.p-chatbot__message
  flex: 1
  padding: 10px
  border-radius: 8px
  background-color: #fff
.p-chatbot__message--owner
  color: #333
.p-chatbot__message__link
  color:rgb(0,83,169)
  text-decoration: underline
.p-chatbot__question
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 10px
  padding: 10px
  border-radius: 8px
  font-weight: bold
  color: rgb(0,83,169)
  background-color: rgb(234,246,254)
.p-chatbot__question--selected 
  color: #fff
  background-color: rgb(96,181,225)

.p-chatbot__avatar
  width: 30px
  height: 30px
  overflow: hidden
  border-radius: 50%
.p-chatbot__avatar--owner
  background-color: rgb(0,83,169)
.p-chatbot__avatar--user
    background-color: rgb(10, 10, 10)


.p-chatbot__startButton
  width: 60px
  height: 60px
  border-radius: 50%
  background-color: rgb(0,83,169)
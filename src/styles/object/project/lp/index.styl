.p-lp
  color #2c4a70
  a
    color inherit
    transition all .5s ease
    &:hover
      opacity 0.7
  img
    width 100%
    height auto
  *
    box-sizing border-box

  &__full__image
    +pc()
      display block
    +sp()
      display block

  &__step__bg
    +pc()
      display block
    +sp()
      display block

  &__step
    +pc()
      display block
    +sp()
      display block

  &__contents
    +pc()
      width pcvw(1760)
      margin 0 auto
      padding-top pcvw(200)
    +sp()
      padding-top spvw(80)
      margin 0 spvw(40)
     
    > section:first-child >*:first-child
      margin-top 0

  &__header
    &__primary
      position relative
      z-index 2
      background-color #60b5e1
      +pc()
        padding pcvw(120) pcvw(100) pcvw(120) pcvw(450)
        width 90vw
        margin-top pcvw(-248)
      +sp()
        padding spvw(45) spvw(45)
      &__label
        display inline-block
        font-weight bold
        background-color #d5e2ea
        +pc()
          font-size pcvw(24)
          padding pcvw(16) pcvw(20)
          border-radius pcvw(40)
        +sp()
          font-size spvw(22)
          padding spvw(10) spvw(30)
          border-radius spvw(40)

      &:after
        position absolute
        content ""
        display block
        background-size cover
        +pc()
          right pcvw(60)
          top pcvw(-348)
          width pcvw(2040)
          height pcvw(348)
        +sp()
          right 0
          top spvw(-440)
          width spvw(750)
          height spvw(440)

      &.is-category__diary:after
        +pc()
          background-image url("/assets/images/lp/detail/pc/category__diary.png")
        +sp()
          background-image url("/assets/images/lp/detail/sp/category__diary.png")


      &.is-category__info:after
        +pc()
          background-image url("/assets/images/lp/detail/pc/category__info.png")
        +sp()
          background-image url("/assets/images/lp/detail/sp/category__info.png")

      &.is-category__other:after
        +pc()
          background-image url("/assets/images/lp/detail/pc/category__other.png")
        +sp()
          background-image url("/assets/images/lp/detail/sp/category__other.png")


      &__title
        color #fff
        font-weight bold
        +pc()
          font-size pcvw(72)
          margin-top pcvw(40)
        +sp()
          font-size spvw(44)
          margin-top spvw(28)

      &__date
        color #fff
        +pc()
          font-size pcvw(32)
          margin-top pcvw(40)
        +sp()
          font-size spvw(11)
          margin-top spvw(46)

    &__secondary
      position relative
      font-weight bold
      +pc()
        font-size pcvw(72)
        margin-top pcvw(200)
        padding-bottom pcvw(60)
        margin-bottom pcvw(60)
        line-height 1.3
      +sp()
        font-size spvw(44)
        line-height 1.6
        margin-top spvw(40)
        margin-bottom spvw(60)
        padding-bottom spvw(60)

      &::after
        position absolute
        content ""
        display block
        background-color #fad06c
        +pc()
          bottom 0
          left 0
          height pcvw(10)
          width pcvw(120)
        +sp()
          bottom 0
          left 0
          right 0
          height spvw(10)
          width spvw(120)
          margin auto


    &__tertiary
      font-weight bold
      +pc()
        font-size pcvw(60)
        margin-top pcvw(200)
        line-height 1.3
      +sp()
        font-size spvw(44)
        margin-top spvw(150)
        line-height 1.3

    &__quaternary
      font-weight bold
      +pc()
        font-size pcvw(48)
        margin-top pcvw(180)
      +sp()
        font-size spvw(36)
        margin-top spvw(120)
    

  &__text
    +pc()
      margin-top pcvw(60)
      font-size pcvw(36)
      line-height 1.6
    +sp()
      font-size spvw(28)
      margin-top spvw(60)
      line-height 1.6


  &__info
    background-color #f6f2ee
    +pc()
      width 100%
      padding pcvw(100) pcvw(100)
      margin-top pcvw(80)
    +sp()
      width 100%
      padding spvw(50) spvw(50)
      margin-top spvw(75)

    &__title
      font-weight bold
      +pc()
        font-size pcvw(40)
        line-height 2
        margin-top pcvw(-20)
        margin-bottom pcvw(-20)
      +sp()
        font-size spvw(36)
        line-height 1.6
        margin-top spvw(20)
        margin-bottom spvw(20)

    &__detail
      +pc()
        margin-top pcvw(40)

      &__text
        line-height 1.4
        +pc()
          font-size pcvw(24)
          margin-top pcvw(24)
        +sp()
          font-size spvw(24)
          margin-top spvw(30)
        &--em
          color #ff8880
          line-height 1.4
          +pc()
            font-size pcvw(24)
            margin-top pcvw(24)
          +sp()
            font-size spvw(24)
            margin-top spvw(30)


  &__column__double
    +pc()
      display flex
      justify-content space-between
      width 100%
      margin-top pcvw(70)
    +sp()
      margin-top spvw(60)
    
    &__item
      line-height 1.6
      +pc()
        width 50%
        font-size pcvw(36)
      +sp()
        font-size spvw(28)

      &--img
        +pc()
          width 45%
        +sp()
          margin-top spvw(60)

  &__column__double--img
    +pc()
      display flex
      justify-content space-between
      width 100%
      margin-top pcvw(70)
    +sp()
      margin-top spvw(60)
    & > .p-lp__column__double__item
      +pc()
        width 48%
      +sp()
        margin-top spvw(20)

  &__column__double--text
    +pc()
      display flex
      justify-content space-between
      width 100%
      margin-top pcvw(70)
    +sp()
      margin-top spvw(60)
    
    & > .p-lp__column__double__item
      +pc()
        width 48%
        font-size pcvw(36)
        line-height 1.6
      +sp()
        margin-top spvw(20)

  &__movie
    +pc()
      margin-top pcvw(100)
    +sp()
      margin-top spvw(60)
    &__play
      +pc()
        position absolute
        display block
        top 50%
        left 50%
        transform translate(-50%, -50%)
        z-index 2
        width pcvw(270)
        height pcvw(270)
        opacity 1
        img
          transform scale(1.0)
          transition transform 0.2s ease-out
      +sp()
        position absolute
        display block
        top 50%
        left 50%
        transform translate(-50%, -50%)
        z-index 2
        width spvw(100)
        height spvw(100)
        opacity 1
      &:hover
        opacity 1
        img
          +pc()
            transform scale(1.1)
            transition transform 0.2s ease-out
    &__inner
      +pc()
        width 100%
        height pcvw(990)
        position relative
        border-radius pcvw(100)
        overflow hidden
      +sp()
        width 100%
        height spvw(366)
        position relative
        border-radius spvw(30)
        overflow hidden
        z-index 1
      video
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        transform scale(1.1)



  &__sns
    display flex
    +pc()
      margin-top pcvw(120)
      justify-content flex-end
    +sp()
      margin-top spvw(100)
      justify-content center
    &__twitter
      a
        display block
        +pc()
          width pcvw(50)
        +sp()
          width spvw(48)
    &__facebook
      +pc()
        margin-left pcvw(40)
      +sp()
        margin-left spvw(40)
      a
        display block
        +pc()
          width pcvw(40)
        +sp()
          width spvw(40)


  &__latest__article
    +pc()
      margin pcvw(260) auto 0
      width pcvw(2200)
    +sp()
      margin-top spvw(260)
    &__title
      text-align center
      font-weight bold
      +pc()
        font-size pcvw(48)
      +sp()
        font-size spvw(36)

    &__list
      +pc()
        display flex
        justify-content space-between
        margin-top pcvw(100)
      +sp()
        margin spvw(60) spvw(50) 0
      &__item
        background-color #fff
        +pc()
          width 31.5%
          box-shadow 0 0 pcvw(20) #d2d2d2
        +sp()
          box-shadow 0 0 spvw(20) #d2d2d2
        a
          display block
        & + &
          +sp()
            margin-top spvw(36)
      &__img
        overflow hidden
        background-size contain
        position relative
        +pc()
          width 100%
          height pcvw(400)
        +sp()
          width 100%
          height spvw(380)
        
        &:after
          position absolute
          content ""
          display block
          background-size cover
          background-position right
          background-repeat no-repeat
          +pc()
            right pcvw(20)
            bottom 0
            width pcvw(680)
            height pcvw(160)
          +sp()
            right 0
            top spvw(-440)
            width spvw(750)
            height spvw(440)

        &.is-category__diary
          background-image url("/assets/images/lp/bg_diary.png")
          &:after
            +pc()
              background-image url("/assets/images/lp/detail/pc/category__diary.png")
            +sp()
              background-image url("/assets/images/lp/detail/sp/category__diary.png")

        &.is-category__info
          background-image url("/assets/images/lp/bg_info.png")
          &:after
            +pc()
              background-image url("/assets/images/lp/detail/pc/category__info.png")
            +sp()
              background-image url("/assets/images/lp/detail/sp/category__info.png")
        &.is-category__other
          background-image url("/assets/images/lp/bg_other.png")
          &:after
            +pc()
              background-image url("/assets/images/lp/detail/pc/category__other.png")
            +sp()
              background-image url("/assets/images/lp/detail/sp/category__other.png")


      &__desc
        +pc()
          padding pcvw(30) pcvw(50)
        +sp()
          padding spvw(40)
        &__label
          color #fff
          background-color #60b5e1
          font-weight bold
          display inline-block
          +pc()
            font-size pcvw(24)
            padding pcvw(14) pcvw(20)
            border-radius pcvw(40)
          +sp()
            font-size spvw(22)
            padding spvw(14) spvw(26)
            border-radius spvw(50)

        &__title
          font-weight bold
          +pc()
            font-size pcvw(32)
            margin-top pcvw(24)
          +sp()
            font-size spvw(32)
            margin-top spvw(30)
        &__text
          +pc()
            font-size pcvw(28)
            margin-top pcvw(40)
            line-height 1.6
          +sp()
            font-size spvw(28)
            margin-top spvw(35)
            line-height 1.6
        &__date
          color #aab0b8
          +pc()
            font-size pcvw(24)
            margin-top pcvw(36)
          +sp()
            font-size spvw(22)
            margin-top spvw(35)

    &__back
      font-weight bold
      +pc()
        text-align center
        margin-top pcvw(100)
        font-size pcvw(32)
      +sp()
        display flex
        justify-content center
        margin-top spvw(100)
        font-size spvw(32)
      a
        display inline-block
        position relative
        +pc()
          padding-left pcvw(54)
        +sp()
          padding-left spvw(60)
        &:hover
          .p-lp__latest__article__back__arrow
            &::before
              transform translate(-60%, -50%)
            &::after
              transform translate(-70%, -50%) rotate(-135deg)


      &__arrow
        background-color #0053a9
        display block
        position absolute
        top 50%
        transform translateY(-50%)
        +pc()
          width pcvw(40)
          height pcvw(40)
          border-radius pcvw(20)
          left pcvw(-20)
        +sp()
          width spvw(40)
          height spvw(40)
          border-radius spvw(40)
          left 0
        &::before
          content ""
          display block
          position absolute
          left 50%
          top 50%
          width pcvw(20)
          height pcvw(4)
          background #fff
          transform translate(-50%, -50%)
          transition all .5s ease
        &::after
          content ""
          display block
          position absolute
          left 45%
          top 50%
          width pcvw(10)
          height pcvw(10)
          border-top pcvw(4) solid #fff
          border-right pcvw(4) solid #fff
          transform translate(-50%, -50%) rotate(-135deg)
          transition all .5s ease


  &__breadcrumb
    +pc()
      width  pcvw(2220)
      margin pcvw(240) auto pcvw(60)
    +sp()
      margin spvw(210) spvw(50) spvw(50)
    &__list
      display flex
      &__item
        position relative
        +pc()
          margin-left pcvw(30)
          font-size pcvw(24)
        +sp()
          margin-left spvw(25)
          font-size spvw(22)
        &:before
          content "-"
          display block
          position absolute
          +pc()
            left pcvw(-18)
          +sp()
            left spvw(-13)
        &:first-child
          margin-left 0
          &:before
            display none



.c-article
  +pc()
    margin 130px auto 0
    width 1100px
  +sp()
    margin-top spvw(260)
  &__title
    text-align center
    font-weight bold
    +pc()
      font-size 24px
    +sp()
      font-size spvw(36)

  &__list
    +pc()
      display flex
      justify-content space-between
      flex-wrap wrap
      margin-top pcvw(100)
    +sp()
      margin spvw(60) spvw(50) 0
    &:after
      +pc()
        display block
        content ""
        width 31.5% 
    &__item
      background-color #fff
      +pc()
        width 31.5%
        box-shadow 0px 0px pcvw(20) #d2d2d2
      +sp()
        box-shadow 0px 0px spvw(20) #d2d2d2

      &:nth-child(n+4)
        +pc()
          margin-top pcvw(60)
      & + &
        +sp()
          margin-top spvw(36)
      a
        display block
    &__img
      overflow hidden
      background-size contain
      position relative
      +pc()
        width 100%
        height pcvw(400)
      +sp()
        width 100%
        height spvw(380)
      
      &:after
        position absolute
        content ""
        display block
        background-size cover
        background-position right
        background-repeat no-repeat
        +pc()
          right pcvw(20)
          bottom 0
          width pcvw(680)
          height pcvw(400)
        +sp()
          right 0
          bottom 0
          width spvw(650)
          height spvw(400)

      &.is-category__diary
        background-image url("/assets/images/topics/bg_diary.png")
        &:after
          +pc()
            background-image url("/assets/images/topics/detail/pc/category__diary.png")
          +sp()
            background-image url("/assets/images/topics/detail/sp/category__diary.png")

      &.is-category__info
        background-image url("/assets/images/topics/bg_info.png")
        &:after
          +pc()
            background-image url("/assets/images/topics/detail/pc/category__info.png")
          +sp()
            background-image url("/assets/images/topics/detail/sp/category__info.png")
      &.is-category__other
        background-image url("/assets/images/topics/bg_other.png")
        &:after
          +pc()
            background-image url("/assets/images/topics/detail/pc/category__other.png")
          +sp()
            background-image url("/assets/images/topics/detail/sp/category__other.png")

    &__desc
      color #2c4a70
      +pc()
        padding pcvw(30) pcvw(50)
      +sp()
        padding spvw(40)
      &__label
        color #fff
        background-color #60b5e1
        font-weight bold
        display inline-block
        text-align center
        +pc()
          font-size pcvw(24)
          padding pcvw(14) pcvw(20)
          border-radius pcvw(40)
          min-width pcvw(140)
        +sp()
          font-size spvw(22)
          padding spvw(14) spvw(26)
          border-radius spvw(50)

      &__title
        font-weight bold
        +pc()
          font-size pcvw(32)
          margin-top pcvw(24)
        +sp()
          font-size spvw(32)
          margin-top spvw(30)
      &__text
        +pc()
          font-size pcvw(28)
          margin-top pcvw(40)
          line-height 1.6
        +sp()
          font-size spvw(28)
          margin-top spvw(35)
          line-height 1.6
      &__date
        color #aab0b8
        +pc()
          font-size pcvw(24)
          margin-top pcvw(36)
        +sp()
          font-size spvw(22)
          margin-top spvw(35)







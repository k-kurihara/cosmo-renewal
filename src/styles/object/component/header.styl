.c-header
  position fixed
  top 0
  left 0
  width 100%
  background #f9f8f7
  z-index 9
  +pc()
    width 100%
    padding pcvw(54) 0
    box-sizing border-box
  +sp()
    width 100%
    padding spvw(20) 0
    box-sizing border-box
  &__inner
    +pc()
      width 100%
      padding 0 pcvw(60)
      box-sizing border-box
      display flex
      align-items center
      justify-content space-between
    +sp()
      display flex
      justify-content space-between
      width 100%
      padding 0 spvw(20) 0 spvw(30)
      box-sizing border-box
  &__logo
    +pc()
      display block
      width pcvw(255)
    +sp()
      display block
      padding-top spvw(10)
      width spvw(181)
  &__links
    +sp()
      position fixed
      top 0
      left 0
      width 100%
      height 100%
      background #fff
      padding 0 spvw(70)
      box-sizing border-box
      padding-top spvw(172)
      padding-bottom spvw(172)
      opacity 0
      overflow hidden
      pointer-events none
    &__inner
      +pc()
        display flex
        align-items center
      +sp()
        box-sizing border-box
        width 100%
        height 100%
    &__list
      +pc()
        display flex
      +sp()
        width 100%
    &__item
      position relative
      visibility visible
      transform translate3d(0, 0, 0)
      backface-visibility hidden
      +sp()
        border-top 1px solid #d5e2ea
      a
        +pc()
          font-size pcvw(28)
          font-weight bold
          color #0054a5
        +sp()
          display block
          font-size spvw(28)
          font-weight bold
          color #0054a5
          padding spvw(40)
          box-sizing border-box
      &.active
        &::after
          +pc()
            position absolute
            left 0
            bottom pcvw(-24)
            content ""
            display block
            width 100%
            height 3px
            background #0053a9
            transform-origin right
            transform scale(1, 1)
            backface-visibility hidden
            transition none
      &::after
        +pc()
          position absolute
          left 0
          bottom pcvw(-24)
          content ""
          display block
          width 100%
          height 3px
          background #0053a9
          transform-origin right
          transform scale(0, 1)
          backface-visibility hidden
          transition transform 0.2s ease-out
        +sp()
          position absolute
          top 50%
          right spvw(40)
          transform translateY(-50%)
          content ""
          display block
          width spvw(22)
          height spvw(22)
          background-image url('/assets/images/common/ico-arrow.svg')
          background-repeat no-repeat
          background-size 100%
      &.has-second
        +sp()
          padding spvw(60) spvw(40) spvw(40)
          box-sizing border-box
        a
          +sp()
            display block
            padding 0
        &::after
          +sp()
            display none
    &__item:hover
      +pc()
        &::after
          transform-origin left
          transform scale(1, 1)
          backface-visibility hidden
          transition transform 0.2s ease-out
    &__item + &__item
      +pc()
        margin-left pcvw(76)
    &__item:last-of-type
      +sp()
        border-bottom 1px solid #d5e2ea
    &__page
      display inline-block
      cursor pointer
    &__contacus
      +pc()
        margin-left pcvw(84)
      +sp()
        margin-top spvw(70)
        padding-bottom spvw(70)
        text-align center
  &__links__second
    +pc()
      display none
      width 100%
      position absolute
      top 0
      left 0
      padding-top pcvw(78)
      box-sizing border-box
      cursor pointer
    +sp()
      display block
      width 100%
      margin-top spvw(42)
    .has-second:hover &
      +pc()
        display block
    &__inner
      +pc()
        background #fff
        cursor default
        position absolute
        top pcvw(78)
        left pcvw(-46)
        width pcvw(633)
        padding pcvw(60) pcvw(20)
        box-sizing border-box
        box-shadow 0 0 pcvw(5) pcvw(8) rgba(0, 0, 0, 0.05)
      +sp()
        width 100%
        display block
    &__list
      +pc()
        width 100%
    &__item
      +pc()
        border-radius pcvw(16)
        width 100%
        box-sizing border-box
        overflow hidden
      +sp()
        padding spvw(20) 0
        box-sizing border-box
        position relative
      &::after
        +sp()
          position absolute
          top 50%
          right 0
          transform translateY(-50%)
          content ""
          display block
          width spvw(22)
          height spvw(22)
          background-image url('/assets/images/common/ico-arrow.svg')
          background-repeat no-repeat
          background-size 100%
    &__item__button
      +pc()
        position relative
        display block
        padding pcvw(40) pcvw(50) pcvw(40) pcvw(100)
        box-sizing border-box
        font-size pcvw(28)
        font-weight normal
        letter-spacing 0.04em
        background #fff
        transition background 0.2s ease-out
      &::before
        +pc()
          content ""
          display block
          position absolute
          top 50%
          left pcvw(30)
          transform translateY(-50%)
          width pcvw(22)
          height pcvw(22)
          background-image url('/assets/images/common/ico-arrow.svg')
          background-repeat no-repeat
          background-size 100%
          transition left 0.2s ease-out
      &:hover
        +pc()
          background #eaf6fe
          transition background 0.2s ease-out
        &::before
          left pcvw(50)
          transition left 0.2s ease-out
  &__hamburger
    +sp()
      position relative
      display block
      width spvw(90)
      height spvw(90)
      border-radius 50%
      background #0054a5
    &__line
      +sp()
        position absolute
        top 50%
        left 50%
        width spvw(35)
        height spvw(17)
        transform translate(-50%, -50%)
        &::before,
        &::after
          position absolute
          content ""
          display block
          width 100%
          height spvw(4)
          background #fad06c
        &::before
          top 0
          left 50%
          transform translate(-50%, -50%)
          transition transform 0.2s ease-out, top 0.2s ease-out
        &::after
          top spvw(13)
          left 50%
          transform translate(-50%, -50%)
          transition transform 0.2s ease-out, top 0.2s ease-out
      .open &::before
        top 50%
        transform translate(-50%, -50%) rotate(135deg)
        transition transform 0.2s ease-out, top 0.2s ease-out
      .open &::after
        top 50%
        transform translate(-50%, -50%) rotate(-135deg)
        transition transform 0.2s ease-out, top 0.2s ease-out

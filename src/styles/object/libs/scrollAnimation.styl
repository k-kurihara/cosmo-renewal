[data-module="scrollAnimation"]
  // data-optionsのanimationで'fadeUp'が指定されていた際の初期状態
  &[data-options*="fadeUp"]
    opacity: 0
    transform: translateY(50px)
  &[data-options*="swipeIn"]
    position relative
    z-index 1
    &::before
      content ""
      display block
      width 100%
      height 100%
      position absolute
      z-index 2
      background #2c4a70
      transform-origin right
      transform scale(0, 1)
      transition transform 0.2s ease-out
    &.swipeIn
      color transparent
      &::before
        transform-origin left
        transform scale(1, 1)
        transition transform 0.2s ease-out
  &[data-options*="tori"]
    +pc()
      opacity 0
      transform translate3d(-100%, 0, 0) rotate(0deg)



[data-module="scrollHint"]
  +sp()
    position relative
    &::after
      display block
      content ""
      position absolute
      top 50%
      left 50%
      transform translate(-20%, -50%)
      width spvw(110)
      height spvw(110)
      border-radius 10%
      background-image url('/assets/images/common/ico-pointup.svg')
      background-repeat no-repeat
      background-size spvw(90)
      background-position center
      animation swipe 1.5s infinite ease-out
      opacity 1
      transition opacity 0.25s ease-out
  &.hidden::after
    opacity 0
    transition opacity 0.25s ease-out
    animation none

@keyframes swipe
  0%
    transform translate(-20%, -50%)
  80%
    opacity 1
  100%
    transform translate(-70%, -50%)
    opacity 0
